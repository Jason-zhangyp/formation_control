<launch>
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find agent_test)/config/rosconsole_debug_enabled.conf"/>

  <arg name="number_of_agents" default="2"/>
  <node pkg="agent_test" type="ground_station_test" name="ground_station" output="screen" cwd="ROS_HOME">
    <param name="number_of_agents" type="int" value="$(arg number_of_agents)" />
  </node>

  <arg name="id_1" default="1"/>
  <node pkg="agent_test" type="agent_test" name="agent_$(arg id_1)" output="screen" cwd="ROS_HOME">
    <param name="agent_id" type="int" value="$(arg id_1)" />
  </node>

  <arg name="id_2" default="2"/>
  <node pkg="agent_test" type="agent_test" name="agent_$(arg id_2)" output="screen" cwd="ROS_HOME">
    <param name="agent_id" type="int" value="$(arg id_2)" />
  </node>
</launch>
